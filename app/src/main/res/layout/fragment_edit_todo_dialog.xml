<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_edit_todo_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etEditTodoName"
        android:hint="Todo Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEditTodoDueDate"
        android:hint="Pick a due date"
        android:ems="10"
        android:layout_below="@id/etEditTodoName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Pick Due Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEditDueDate"
        android:layout_below="@id/etEditTodoName"
        android:layout_toRightOf="@+id/tvEditTodoDueDate"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="Save"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/btnSave"
        android:layout_below="@+id/spEditPriority"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spEditPriority"
        android:layout_below="@+id/btnEditDueDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
