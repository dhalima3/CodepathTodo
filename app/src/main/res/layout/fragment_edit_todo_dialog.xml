<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_edit_todo_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etEditTodoName"
        android:layout_below="@+id/tvEditItem"
        android:layout_alignLeft="@+id/tvEditItem"
        android:layout_alignStart="@+id/tvEditItem" />

    <TextView
        android:text="Edit Item Below:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEditItem"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEditTodoDueDate"
        android:hint="Pick a date"
        android:ems="10"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_above="@+id/btnSave"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Pick Due Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEditDueDate"
        android:layout_below="@+id/etEditTodoName"
        android:layout_toRightOf="@+id/tvEditItem"
        android:layout_toEndOf="@+id/tvEditItem" />

    <Button
        android:text="Save"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/btnSave"
        android:layout_below="@+id/btnEditDueDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
