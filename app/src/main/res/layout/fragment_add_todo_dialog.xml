<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="daryl.codepathtodo.AddTodoDialogFragment">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etAddItemName"
        android:hint="Todo Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAddTodoDueDate"
        android:hint="Pick a due date"
        android:ems="10"
        android:layout_below="@+id/etAddItemName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Pick Due Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddDueDate"
        android:layout_below="@+id/etAddItemName"
        android:layout_toRightOf="@+id/tvAddTodoDueDate"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Add Item"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/btnAddItem"
        android:layout_below="@+id/spAddPriority"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spAddPriority"
        android:layout_below="@+id/tvAddTodoDueDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
